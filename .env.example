# Host settings
HOST_IP=192.168.1.100  # Replace with your host machine's IP

# Database settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=questify

# API settings
API_PORT=8000
API_URL=http://${HOST_IP}:8000

# Client settings
CLIENT_PORT=3000

# JWT settings
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Docker volume names
POSTGRES_DATA_VOLUME=questify_postgres_data
NETWORK_NAME=questify_network

# Build settings
BUILD_MODE=production  # Change to 'development' for local development
API_CONTEXT=https://github.com/senshiben-efrei/questify.git#main:api
CLIENT_CONTEXT=https://github.com/senshiben-efrei/questify.git#main:client
DOCKERFILE=Dockerfile  # Use Dockerfile.dev for development